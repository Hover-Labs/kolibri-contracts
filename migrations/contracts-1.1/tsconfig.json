{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "./",
    "outDir": "build",
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": [ "es2015" ]
  },
  "include": [
    "src/*.ts"
  ]
}
